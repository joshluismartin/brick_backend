              "mode": "raw",
              "raw": "{\n  \"milestone_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/achievements/check/milestone",
              "host": ["{{base_url}}"],
              "path": ["achievements", "check", "milestone"]
            }
          }
        }
      ]
    },
    {
      "name": "Google Calendar",
      "item": [
        {
          "name": "Create Habit Calendar Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"start_time\": \"2025-08-31T07:00:00Z\",\n  \"end_time\": \"2025-08-31T08:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/calendar/habits/1/event",
              "host": ["{{base_url}}"],
              "path": ["calendar", "habits", "1", "event"]
            }
          }
        },
        {
          "name": "Create Recurring Habit Events",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"start_date\": \"2025-08-30\",\n  \"end_date\": \"2025-09-30\",\n  \"time_of_day\": \"07:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/calendar/habits/1/recurring_events",
              "host": ["{{base_url}}"],
              "path": ["calendar", "habits", "1", "recurring_events"]
            }
          }
        },
        {
          "name": "Create Milestone Calendar Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"due_date\": \"2025-09-15\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/calendar/milestones/1/event",
              "host": ["{{base_url}}"],
              "path": ["calendar", "milestones", "1", "event"]
            }
          }
        },
        {
          "name": "Get Calendar Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/calendar/events?days_ahead=7",
              "host": ["{{base_url}}"],
              "path": ["calendar", "events"],
              "query": [
                {
                  "key": "days_ahead",
                  "value": "7"
                }
              ]
            }
          }
        },
        {
          "name": "Bulk Sync Calendar",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sync_habits\": true,\n  \"sync_milestones\": true,\n  \"default_time\": \"09:00\",\n  \"days_ahead\": 30\n}"
            },
            "url": {
              "raw": "{{base_url}}/calendar/bulk_sync",
              "host": ["{{base_url}}"],
              "path": ["calendar", "bulk_sync"]
            }
          }
        },
        {
          "name": "Get Sync Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/calendar/sync_status",
              "host": ["{{base_url}}"],
              "path": ["calendar", "sync_status"]
            }
          }
        }
