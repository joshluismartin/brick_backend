{
  "info": {
    "name": "BRICK Goal Tracker API",
    "description": "Complete API collection for BRICK backend with Google Calendar, SendGrid, and Achievement system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/sign_up",
              "host": ["{{base_url}}"],
              "path": ["auth", "sign_up"]
            }
          }
        },
        {
          "name": "Sign In",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    console.log('JWT token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/sign_in",
              "host": ["{{base_url}}"],
              "path": ["auth", "sign_in"]
            }
          }
        }
      ]
    },
    {
      "name": "Blueprints",
      "item": [
        {
          "name": "Create Blueprint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"blueprint\": {\n    \"title\": \"Fitness Goals\",\n    \"description\": \"Get healthy and fit\",\n    \"priority\": \"high\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/blueprints",
              "host": ["{{base_url}}"],
              "path": ["blueprints"]
            }
          }
        },
        {
          "name": "Get All Blueprints",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/blueprints",
              "host": ["{{base_url}}"],
              "path": ["blueprints"]
            }
          }
        },
        {
          "name": "Get Blueprint by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/blueprints/1",
              "host": ["{{base_url}}"],
              "path": ["blueprints", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Milestones",
      "item": [
        {
          "name": "Create Milestone",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"milestone\": {\n    \"title\": \"Lose 10 pounds\",\n    \"description\": \"Reach target weight\",\n    \"blueprint_id\": 1,\n    \"priority\": \"high\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/milestones",
              "host": ["{{base_url}}"],
              "path": ["milestones"]
            }
          }
        },
        {
          "name": "Get All Milestones",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/milestones",
              "host": ["{{base_url}}"],
              "path": ["milestones"]
            }
          }
        }
      ]
    },
    {
      "name": "Habits",
      "item": [
        {
          "name": "Create Habit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"habit\": {\n    \"title\": \"Morning Run\",\n    \"description\": \"30 minute jog\",\n    \"milestone_id\": 1,\n    \"frequency\": \"daily\",\n    \"priority\": \"high\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/habits",
              "host": ["{{base_url}}"],
              "path": ["habits"]
            }
          }
        },
        {
          "name": "Get All Habits",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/habits",
              "host": ["{{base_url}}"],
              "path": ["habits"]
            }
          }
        },
        {
          "name": "Complete Habit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"completed_at\": \"2025-08-30T10:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/habits/1/complete",
              "host": ["{{base_url}}"],
              "path": ["habits", "1", "complete"]
            }
          }
        }
      ]
    },
    {
      "name": "Achievements",
      "item": [
        {
          "name": "Seed Default Achievements",
